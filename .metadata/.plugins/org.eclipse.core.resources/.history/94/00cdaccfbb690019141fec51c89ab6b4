package pyramid;
import java.util.Scanner;
public class pyramid {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int i, j, a;
		System.out.println("Enter the value of a:- ");
		a = s.nextInt();
		for(i=1; i<=a; i++)
		{
			for(j=1; j<=i; j++)
			{
				System.out.print("*");
			}
			//System.out.println("");
		}
	}

}
